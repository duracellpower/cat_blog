<div class="row">
  <div class="col-10">
    <span class="align-bottom">
      <h1>Alle Löwen</h1>
    </span>
  </div>
  <div class="col-2">
    <span class="align-bottom">
      <%= link_to "Neuer Löwe", new_lion_path, class: "btn btn-primary" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <br/>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table table-striped">
      <thead class="bg-primary text-white font-weight-bold">
        <tr>
          <td>
            Vorname
          </td>
          <td>
            Name
          </td>
          <td>
            Alter
          </td>
          <td>
            Info
          </td>
          <td class="text-right">
            Aktionen
          </td>
        </tr>
      </thad>
      <tbody>
        <% @lions.each do |lion| %>
          <tr>
            <td>
              <%= lion.pre_name %>
            </td>
            <td>
              <%= lion.name %>
            </td>
            <td>
              <%= lion.age %>
            </td>
            <td>
              <%= lion.info %>
            </td>
            <td class="text-right">
              <div class="row">
                <div class="col">
                  <%= link_to "Delete", lion_path(lion), method: :delete, data: {confirm: "Bisch sicher ?"}, class: "btn btn-danger" %>
                  <%= link_to "Edit", edit_lion_path(lion), class: "btn btn-primary" %>
                  <%= link_to "View", lion_path(lion), class: "btn btn-primary" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
