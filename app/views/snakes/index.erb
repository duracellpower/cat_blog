<div class="row">
  <div class="col-10">
    <span class="align-bottom">
      <h1>Alle Schlangen</h1>
    </span>
  </div>
  <div class="col-2">
    <span class="align-bottom">
      <%= link_to "Neue Schlange", new_snake_path, class: "btn btn-primary" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <br/>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <table class="table table-striped">
      <thead class="bg-primary text-white font-weight-bold">
        <tr>
          <td>
            Vorname
          </td>
          <td>
            Name
          </td>
          <td>
            Alter
          </td>
          <td>
            Info
          </td>
          <td class="text-right">
            Aktionen
          </td>
        </tr>
      </thad>
      <tbody>
        <% @snakes.each do |snake| %>
          <tr>
            <td>
              <%= snake.pre_name %>
            </td>
            <td>
              <%= snake.name %>
            </td>
            <td>
              <%= snake.age %>
            </td>
            <td>
              <%= snake.info %>
            </td>
            <td class="text-right">
              <div class="row">
                <div class="col">
                  <%= link_to "Delete", snake_path(snake), method: :delete, data: {confirm: "Bisch sicher ?"}, class: "btn btn-danger" %>
                  <%= link_to "Edit", edit_snake_path(snake), class: "btn btn-primary" %>
                  <%= link_to "View", snake_path(snake), class: "btn btn-primary" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
