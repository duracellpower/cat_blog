<div class="row">
  <div class="col-9">
    <span class="align-bottom">
      <h1><%= "Edit: #{@bird.name}" %></h1>
    </span>
  </div>
  <div class="col-3 text-right">
    <span class="align-bottom text-right">
      <%= link_to "ZurÃ¼ck", birds_path, class: "btn btn-primary" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <br/>
  </div>
</div>

<%= form_for @bird, :url => { :action => "update" } do |f| %>

  <table class="table birds-table">
    <tr>
      <td>
        <b>
          <%= f.label :name %>
        </b>
      </td>
      <td>
        <%= f.text_field :name, class: "form-control" %>
      </td>
    </tr>
    <tr>
      <td>
        <b>
          <%= f.label :prename%>
        </b>
      </td>
      <td>
        <%= f.text_field :prename, class: "form-control" %>
      </td>
    </tr>
    <tr>
      <td>
        <b>
          <%= f.label :birthdate %>
        </b>
      </td>
      <td>
        <%= f.date_field :birthdate, class: "form-control"%>
      </td>
    </tr>
    <tr>
      <td>
        <b>
          <%= f.label :info %>
        </b>
      </td>
      <td>
        <%= text_area(:bird, :info , cols: 20, rows: 40, class: "form-control")%>
      </td>
    </tr>
  </table>

  <div class="row">
    <div class="col-12 text-right">
        <%= f.submit "Speichern", class: "btn btn-primary"%>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-right">
        <br>
    </div>
  </div>

<% end %>
