<h1>Neue Katze erfassen</h1>

<br>

<%= form_for @cat do |f| %>

  <table>
    <tr>
      <td>
        <%= f.label :name %>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :pre_name %>
      </td>
      <td>
        <%= f.text_field :pre_name %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :birthdate %>
      </td>
      <td>
        <%= f.date_field :birthdate%>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :info %>
      </td>
      <td>
        <%= text_area(:cat, :info , cols: 20, rows: 40) %>
      </td>
    </tr>
  </table>

  <%= f.submit %>

<% end %>
